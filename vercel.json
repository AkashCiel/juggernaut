{
  "version": 2,
  "outputDirectory": "frontend",
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/email-collection",
      "dest": "/email-collection.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/status",
      "dest": "/api/status"
    },
    {
      "src": "/test",
      "dest": "/api/test"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 600
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
