{
  "name": "juggernaut-vercel",
  "version": "1.0.0",
  "description": "Juggernaut AI News Chat - Vercel Deployment",
  "main": "api/health.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:vercel": "vercel dev",
    "test:curate-feed": "node test-curate-feed.js",
    "test:email": "node test-email-service.js",
    "build": "echo 'No build step required for static files'",
    "start": "vercel dev",
    "test:deployment": "node test-vercel-deployment.js",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "keywords": [
    "ai",
    "news",
    "chat",
    "vercel",
    "serverless"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.3",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.1",
    "mailgun.js": "^12.0.3",
    "marked": "^16.2.1",
    "moment-timezone": "^0.5.43",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}